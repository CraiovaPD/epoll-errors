{
  "compilerOptions": {
    "alwaysStrict": true,
    // "allowJs": true,
    "emitBOM": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "target": "es6",
    "declaration": true,
    "outDir": "build/"
  },

  "include": [
    "src/index.ts"
  ],

  "exclude": [
    "node_modules/"
  ]
}
